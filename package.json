{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "https://www.google.com/", 
    "paths": {
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"]
    }
  },
  "include": ["tests/**/*.ts", "pages/**/*.ts", "utils/**/*.ts"]
}
